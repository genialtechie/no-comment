{
  "name": "no-comment",
  "displayName": "no-comment",
  "description": "A vscode extension that uses AI to automatically add comments to code as you type.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:no-comment.insertComment"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "no-comment.insertComment",
        "title": "Add AI generated comment"
      }
    ],
    "keybindings": [
      {
        "command": "no-comment.insertComment",
        "key": "Ctrl+Alt+C",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "No Comment",
      "properties": {
        "no-comment.trigger": {
          "type": "string",
          "default": "",
          "description": "A custom trigger string to activate GPT analysis and comment insertion. Leave empty to use only the keyboard shortcut."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "chatgpt": "^5.2.4",
    "dotenv-webpack": "^8.0.1",
    "openai": "^3.2.1",
    "openai-token": "^1.0.0"
  }
}
